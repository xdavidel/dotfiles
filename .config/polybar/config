[module/cpu]
type = custom/script
exec = top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print 100 - $1"%"}'
interval = 4
format-prefix = "ðŸ–¥ "
format-prefix-foreground = ${colors.green}
format-underline = ${colors.darkmagenta}
format-padding = 1
format-background = ${colors.background-alt}
click-left = notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)"

