# Open terminal
super + Return
	$TERMINAL

# Open a terminal at current directory
super + shift + Return
	samedir

# Close Focused Window
super + q
	wmctrl -c :ACTIVE:

# Force Close focused window
super + shift + q
	kill -9 `xdotool getwindowfocus getwindowpid`

# Open dmenu
super + d
	dmenu_run -fn 'mono:pixelsize=25'

# Open Rofi
super + shift + d
	rofi -show drun -disable-history -sort

# Open GUI file browser
super + e
	setsid $FILEGUI

# Open terminal file browser
super + shift + e
	setsid $FILE

# Open Newsboat
super + n
	setsid $TERMINAL -e newsboat && refbar news

# Open Htop
super + i
	setsid $TERMINAL -e htop

# Open calcurse
super + y
	setsid $TERMINAL -e calcurse

# Open audio mixer
super + shift + a
	setsid $TERMINAL dmc control

# Toggle Camera
super + shift + c
	camtoggle

# Open default web browser
super + w
	$BROWSER

# Open default web browser in incognito
super + shift + w
	$BROWSERP

# Open keybinds menu
super + slash
	keybinds

super + ctrl + End
	pidof -s xcompmgr && killall xcompmgr || xcompmgr &

# Open emoji selector
super + {_,shift +} semicolon
	menurepo "$HOME/.local/repo/emoji" "{_,paste}"

# Open awesome font selector
super + {_,shift +} grave
	menurepo "$HOME/.local/repo/font-awesome-list" "{_,paste}"

# Toggle screenkey
super + Scroll_Lock
	killall screenkey || screenkey

# Close current session
super + shift + Escape
	managesession l

# Shut down
super + shift + x
	managesession p

# Reboot
super + shift + BackSpace
	managesession r

# Show clipboard
super + Insert
	showclip

# Color picker
super + shift + Insert
	pickcolor &

# Lock
super + x
	lockscreen

# Screen off
XF86Launch1
	xset dpms force off

# Take screenshot
Print
	maim pic-full-$(date '+%y%m%d-%H%M-%S').png

# Pick screenshot type
shift + Print
	maimpick

# Record audio or video
super + Print
	dmenurecord

# Kill active recording
super + Delete
	dmenurecord kill

# Pause audio
super + {_,shift +} p
	{dmc pause, pauseallmpv &}

# Changes to next/previous tracks
super + {comma,period}
	dmc {prev,next}

# Restart track
super + shift + less
	dmc replay

# Seek foward in song
super + {_,shift +} bracketright
	dmc forward {5,20}

# Seek backward in song
super + {_,shift +} bracketleft
	dmc backward {5,20}

# Increase volume
super + {equal,plus}
	dmc up {5,15}

# Decrease volume
super + {_,shift +} minus
	dmc down {5,15}

# Mute volume / Media Player
super {_,shift +} + m
	{dmc toggle,mediaplayer}

# Show man help
super + F1
	setsid $TERMINAL -e manview

super + F2
	managesession f

# Change display
super + F3
	displayselect

# Suspend
super {_,shift +} + F4
	{prompt 'Suspend computer?' 'sudo systemctl suspend', prompt 'Hibernate computer?' 'sudo systemctl hibernate'}

# Restart/rescan wifi/eth networks
super + F5
	sudo -A systemctl restart NetworkManager

# Start torrent daemon/open interface
super + F6
	torwrap

# toggle torrent daemon
super + F7
	td-togggle

# sync email
super + F8
	mailsync

# Mount a USB drive or Android device
super + F9
	dmenumount

# Unmount a USB drive or Android device
super + F10
	dmenuumount

# Search with Duckduckgo
super + F11
	ducksearch

# Network Manager interface
super + F12
	$TERMINAL -e nmtui
