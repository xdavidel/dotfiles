{
    "workbench.colorTheme": "Dracula",
    // ================== Command Prompt =========================
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultProfile.windows": "C:/Windows/System32/cmd.exe",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.tabs.enabled": true,
    "workbench.iconTheme": "material-icon-theme",
    "debug.allowBreakpointsEverywhere": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#BE8EE3",
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    // ================== TELEMTRY =========================
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // ================== EDITOR =========================
    "editor.fontFamily": "Cascadia Code, JetBrains Mono, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.tabSize": 4,
    "editor.lineNumbers": "relative",
    "editor.scrollBeyondLastLine" :false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.cursorBlinking": "solid",
    "editor.rulers": [
        80
    ],
    "python.showStartPage": false,
    "python.languageServer": "Pylance",
    // ================== NEOVIM ======================
    "vscode-neovim.neovimExecutablePaths.win32": "C:/tools/neovim/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.win32": "C:/Users/David/AppData/Local/nvim/init.vim",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.config/nvim/init.vim",
    "vscode-neovim.highlightGroups.highlights": {
        "Directory": "vim",
        "IncSearch": {
            "backgroundColor": "theme.editor.findMatchBackground",
            "borderColor": "theme.editor.findMatchBorder"
        },
        "Search": {
            "backgroundColor": "theme.editor.findMatchHighlightBackground",
            "borderColor": "theme.editor.findMatchHighlightBorder"
        },
        "Visual": {
            "backgroundColor": "theme.editor.selectionBackground"
        },
        "Conceal": "vim",
        "Substitute": "vim"
    },
    // ================== VIM =========================
    "vim.hlsearch": false,
    "vim.incsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.mouseSelectionGoesIntoVisualMode": true,
    "vim.surround": true,
    "vim.startInInsertMode": false,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["K"], "commands":["editor.action.showHover"]
        },
        {
            "before": ["<leader>"], "commands":["whichkey.show"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [ ">" ], "commands": ["editor.action.indentLines"]
        },
        {
            "before": [ "<" ], "commands": ["editor.action.outdentLines"]
        },
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-c>": false,
        "<C-v>": true
    },
    "vim.camelCaseMotion.enable": true,
    "vim.textwidth": 80,
    "vim.easymotion": true,
    // ================== WHICHKEY ====================
    "whichkey.sortOrder": "alphabetically",
    "whichkey.delay": 0,
    "whichkey.bindings": [
        {
            "key":"n",
            "name": "No highlight",
            "type": "command",
            "command": "settings.cycle.lineNumbers"
        }
    ],
    // ================== Setting Cycler ==============
    "settings.cycle": [
        {
            "id": "lineNumbers",
            "values":[
                {
                    "editor.lineNumbers": "on"
                },
                {
                    "editor.lineNumbers": "relative"
                }
            ]
        }
    ],

    "cSpell.userWords": [
        "ASLR",
        "Delarosa",
        "Ghidra",
        "PLCs",
        "RTUs",
        "SCADA",
        "binwalk",
        "bootloader",
        "hexdump",
        "inotify",
        "jumptable",
        "osport",
        "pcrypt",
        "toolchain",
        "yara"
    ],
    "cSpell.checkLimit": 5000,
    "cSpell.allowCompoundWords": true,

    "diffEditor.ignoreTrimWhitespace": false,

    "explorer.confirmDragAndDrop": false,
    "glassit-linux.opacity": 96,

    "workbench.editor.enablePreview": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "extensions.ignoreRecommendations": true,
    "clangd.onConfigChanged": "restart"
}
