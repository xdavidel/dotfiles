#!/usr/bin/env sh

[ "$(stat -c %y ~/.local/repo/corona 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && curl -s https://corona-stats.online/Israel > ~/.cache/corona

grep "Israel" ~/.cache/corona |
	sed "s/\s*//g;s/\x1b\[[0-9;]*m//g;s/â”‚/;/g" |
	awk -F';' '{print "ðŸ˜·" $3 " (" $9") ðŸ’€" $5 " (" $7 "%)"}'
