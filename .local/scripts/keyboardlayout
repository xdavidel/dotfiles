#!/bin/sh

[ ! -z "$1" ] && BLOCK_BUTTON="$1"

case $BLOCK_BUTTON in
	1) xkb-switch -n >/dev/null ;;
	3) pidof dunst >/dev/null && notify-send "âŒ¨ Keyboard layout module" "\- Right click to switch to next layout" ;;
esac

echo "$(xkb-switch | sed 's/us/En/g;s/il/He/g;s/^/ ðŸ“– /g')"

xkb-switch -W | while read -r Layout
do
	echo "$Layout" | sed 's/us/En/g;s/il/He/g;s/^/ ðŸ“– /g'
done
