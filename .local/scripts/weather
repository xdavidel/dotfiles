#!/usr/bin/env sh

[ "$(stat -c %y "$HOME/.cache/weatherreport" 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] || [ ! -z "$1" ] &&
	curl -s "wttr.in" > "$HOME/.cache/weatherreport" &&
	command -v notify-send >/dev/null && notify-send "â›… Weather" "New weather forecast for today." &&
	refbar

sed '16q;d' "$HOME/.cache/weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/â˜” /g" | tr -d '\n' &&
sed '13q;d' "$HOME/.cache/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " ðŸŒ™",$1 "Â°","ðŸŒž",$2 "Â°"}'
