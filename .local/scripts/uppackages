#!/usr/bin/env sh

[ ! -z "$1" ] && BLOCK_BUTTON="$1"

case $BLOCK_BUTTON in
    1) setsid $TERMINAL -e pac u ; refbar u & ;;
	2) pidof dunst >/dev/null && notify-send "$(pac p)" ;;
	3) pidof dunst >/dev/null && notify-send "Upgrade module" "ğŸ“¦: number of upgradable packages
- Left click to upgrade packages
- Middle click to show upgradable packages" ;;
esac

updates=$(pac p | wc -l)

[ "$updates" -gt 0 ] && echo "ğŸ“¦ $updates" || exit 1
