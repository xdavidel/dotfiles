#!/usr/bin/env sh

[ ! -z "$1" ] && BLOCK_BUTTON="$1"

filter() { mpc 2>/dev/null | sed "/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/⏸/g;s/\\[playing\\].*/▶/g" | tr '\n' ' ' | sed 's/ $//' ;}

case $BLOCK_BUTTON in
    1) mpc status 2>/dev/null | filter && setsid "$TERMINAL" -e ncmpcpp & ;;  # right click, pause/unpause
    2) mpc toggle 2>/dev/null | filter ;;  # right click, pause/unpause
    3) mpc status 2>/dev/null | filter && notify-send "🎵 Music module" "\- Shows mpd song playing.
- Italic when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track.";;  # right click, pause/unpause
    4) mpc prev 2>/dev/null   | filter ;;  # scroll up, previous
    5) mpc next 2>/dev/null   | filter ;;  # scroll down, next
    *) mpc status 2>/dev/null | filter ;;
esac
