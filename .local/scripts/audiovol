#!/usr/bin/env sh

[ ! -z "$1" ] && BLOCK_BUTTON="$1"

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e dmc control & ;;
	2) dmc toggle & ;;
	4) dmc up & ;;
	5) dmc down & ;;
	3) pgrep -x dunst >/dev/null && notify-send "ğŸ“¢ Volume module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

[ "$(dmc state)" = "1" ] && echo "ğŸ”‡" && exit

vol=$(dmc get)

if [ "$vol" -gt "70" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi

echo "$icon $vol%"
